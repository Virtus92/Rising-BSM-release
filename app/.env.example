# Database Configuration
# When running locally, use localhost. In Docker, use 'db' service name
DATABASE_URL=postgresql://postgres:postgres@db:5432/rising_bsm?schema=public
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=db
DB_PORT=5432
DB_DATABASE=rising_bsm
DB_SSL=false

# Server Configuration
NODE_ENV=development
PORT=3000
NEXT_PUBLIC_FRONTEND_URL=http://localhost:3000
NEXT_PUBLIC_API_URL=http://localhost:3000/api

# Authentication Configuration
JWT_SECRET=your-super-secret-development-key
JWT_EXPIRES_IN=15m
JWT_REFRESH_SECRET=your-super-secret-refresh-key
JWT_REFRESH_EXPIRES_IN=7d
JWT_REFRESH_TOKEN_ROTATION=true

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGINS=http://localhost:3000
